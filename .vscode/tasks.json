{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file with wildcard support",
            "command": "powershell",
            "args": [
            "-Command",
            "g++ -std=c++20 -fdiagnostics-color=always -g @(Get-ChildItem -Filter *.cpp | ForEach-Object { '\"' + $_.FullName + '\"' }) C:/msys64/ucrt64/lib/CRT_glob.o -o \"${fileDirname}\\main.exe\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build with wildcard expansion support using CRT_glob.o"
        }
    ]
}
